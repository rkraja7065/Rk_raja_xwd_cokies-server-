<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Royal Heroz | Rulex Cookies Convo Tool</title>
  <style>
    * { box-sizing: border-box; }
    body {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', sans-serif;
      background: url('https://i.ibb.co/PGJHKLtC/4a9d24188b89e62718fd457ca14e7d88.jpg') no-repeat center center fixed;
      background-size: cover;
      color: #fff;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }
    .wrapper { padding: 30px 5%; flex: 1; }
    .card {
      background: rgba(0, 0, 0, 0.75);
      border-radius: 18px;
      padding: 25px 18px;
      box-shadow: 0 0 30px rgba(0, 255, 255, 0.35);
      backdrop-filter: blur(8px);
      border: 1px solid rgba(0, 255, 255, 0.2);
      margin-bottom: 30px;
    }
    h2 {
      text-align: center;
      color: #0ff;
      font-size: 24px;
      margin-bottom: 20px;
      text-shadow: 0 0 8px #0ff;
    }
    form { display: flex; flex-direction: column; gap: 16px; }
    textarea,
    input[type="text"],
    input[type="number"],
    input[type="file"] {
      width: 100%; padding: 14px;
      background-color: rgba(0, 0, 0, 0.6);
      border: 1px solid #00ffff66;
      border-radius: 12px;
      font-size: 16px;
      color: #0ff;
      box-shadow: inset 0 0 6px #00f0f088;
    }
    textarea { min-height: 160px; }
    input::placeholder, textarea::placeholder {
      color: #aaa; font-style: italic;
    }
    .button {
      width: 100%; padding: 15px;
      background: linear-gradient(135deg, #00e5ff, #00bcd4);
      color: white; font-weight: bold;
      border: none; border-radius: 14px;
      font-size: 18px; cursor: pointer;
      transition: 0.2s ease-in-out;
      box-shadow: 0 0 14px #00f0f0aa;
    }
    .button:hover {
      transform: scale(1.04);
      box-shadow: 0 0 22px #00f0f0cc;
    }
    footer {
      text-align: center; font-size: 14px;
      color: #ccc; padding: 15px 10px;
      text-shadow: 1px 1px 2px #000;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <div class="card">
      <h2>Cookies Convo Tool</h2>
      <form id="startForm" enctype="multipart/form-data">
        <label>Paste your Cookies:</label>
        <textarea name="cookies" placeholder="Paste your Facebook cookies here..." required></textarea>
        <label>Target UID:</label>
        <input type="text" name="targetUID" placeholder="Enter Target UID" required />
        <label>Speed (in seconds):</label>
        <input type="number" name="speed" step="0.1" placeholder="e.g. 2.5" required />
        <label>Haters Name:</label>
        <input type="text" name="haters_name" placeholder="e.g. Hater" required />
        <label>Upload message.txt:</label>
        <input type="file" name="messageFile" accept=".txt" required />
        <button class="button" type="submit">Submit</button>
      </form>
    </div>
  </div>

  <footer>&copy; 2025 Royal Heroz â€¢ All Rights Reserved</footer>

  <script>
    const startForm = document.getElementById('startForm');

    startForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(startForm);
      try {
        const res = await fetch('/start', {
          method: 'POST',
          body: formData
        });

        if (!res.ok) {
          const errText = await res.text();
          throw new Error(errText || 'Failed to start task.');
        }

        const data = await res.json();
        if (data.taskID) {
          window.location.href = `/task/${data.taskID}`;
        } else {
          alert("Failed to start task.");
        }
      } catch (err) {
        console.error("Start error:", err);
        alert("Server error while starting task.");
      }
    });
  </script>
</body>
</html>
